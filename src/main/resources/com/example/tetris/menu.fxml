<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="584.0" prefWidth="542.0" spacing="20.0" style="-fx-background-color: #202028;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tetris.controller.GameController">
   <children>
      <Label text="TETRIS" textFill="WHITE">
         <font>
            <Font name="System Bold" size="48.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <Button mnemonicParsing="false" onAction="#switchToGame" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #b3d748; -fx-cursor: hand;" text="PLAY">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button mnemonicParsing="false" onAction="#exitGame" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #dd4444; -fx-text-fill: white; -fx-cursor: hand;" text="EXIT">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      
      <Label text="HIGH SCORES" textFill="#888888">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      
      <TableView fx:id="scoreTable" maxWidth="300.0" prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: #2b2b33; -fx-border-color: #444;">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="190.0" text="NAME" style="-fx-alignment: CENTER-LEFT;"/>
          <TableColumn fx:id="scoreColumn" prefWidth="90.0" text="SCORE" style="-fx-alignment: CENTER-RIGHT;"/>
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>